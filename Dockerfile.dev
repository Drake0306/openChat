FROM node:20-alpine

# Install required system dependencies for Prisma
RUN apk add --no-cache \
    openssl \
    openssl-dev \
    libc6-compat

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY prisma ./prisma/

# Install dependencies
RUN npm install

# Generate Prisma client for Alpine Linux
RUN npx prisma generate

# Copy application code
COPY . .

EXPOSE 3000

CMD ["npm", "run", "dev"]
